<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bacelonatours.HomeFragment"
        android:label="   "

        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_tourListFragment"
            app:destination="@id/tourListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/tourListFragment"
        android:name="com.example.bacelonatours.TourListFragment"
        android:label="    "
        tools:layout="@layout/fragment_tour_list" >
        <action
            android:id="@+id/action_tourListFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.bacelonatours.DetailFragment"
        android:label="  "
        tools:layout="@layout/fragment_detail" />
    <fragment
        android:id="@+id/galeryFotos"
        android:name="com.example.bacelonatours.galeryFotos"
        android:label="fragment_galery_fotos"
        tools:layout="@layout/fragment_galery_fotos" />
    <fragment
        android:id="@+id/login"
        android:name="com.example.bacelonatours.Login"
        android:label=""
        tools:layout="@layout/fragment_login" />
</navigation>