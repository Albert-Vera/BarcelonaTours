<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Raro"
    tools:context=".LoginFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="150dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_marginLeft="50dp"
                android:src="@drawable/iconbarcelonina">

            </ImageView>
            <TextView

                android:id="@+id/barceloninaRegister"
                android:layout_width="wrap_content"
                android:layout_height="94dp"

                android:fontFamily="cursive"
                android:text="@string/barcelonina_text"

                android:textAlignment="center"
                android:textSize="45dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/email_login"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="180dp"
            android:background="@color/colorTextBoxBack"
            android:drawableLeft="@drawable/ic_person_outline_white_24dp"
            android:padding="5dp"
            android:hint="Email"
            android:textColorHint="@color/colorHint"
            android:textColor="@color/colorInput"
            android:textSize="22sp">

        </EditText>
        <EditText
            android:id="@+id/password_login"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="180dp"
            android:background="@color/colorTextBoxBack"
            android:drawableLeft="@drawable/ic_lock_white_24dp"
            android:padding="5dp"
            android:hint="Password"
            android:textColorHint="@color/colorHint"
            android:textColor="@color/colorInput"
            android:textSize="22sp"
            android:inputType="textPassword">

        </EditText>
        <Button
            android:id="@+id/loginboton"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="180dp"
            android:textSize="22sp"
            android:text="LOGIN"
            android:textColor="@color/colorInput"
            android:background="@drawable/rounded_shape_blau">

        </Button>
        <TextView
            android:id="@+id/iraregistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Here"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="240dp"
            android:textSize="22sp"
            android:textColor="@color/colorInput"
            android:padding="5dp">

        </TextView>
    </LinearLayout>

</ScrollView>